# TrustTune Configuration
# Copy this file to .env and customize for your environment

# ============================================================
# DIRECTORIES
# ============================================================
# Music download directory (defaults to platform-specific Music folder)
# Windows: C:\Users\<username>\Music
# macOS: ~/Music
# Linux: ~/Music or $XDG_MUSIC_DIR
# MUSIC_DIRECTORY=/path/to/your/music

# Configuration directory (defaults to platform-specific config folder)
# Windows: %APPDATA%\TrustTune
# macOS: ~/Library/Application Support/TrustTune
# Linux: ~/.config/trusttune
# CONFIG_DIRECTORY=/path/to/your/config

# ============================================================
# API CONFIGURATION
# ============================================================
# Search API (can be remote for cloud deployment)
SEARCH_API_HOST=0.0.0.0
SEARCH_API_PORT=3000

# Download Daemon (always runs locally)
DOWNLOAD_DAEMON_HOST=127.0.0.1
DOWNLOAD_DAEMON_PORT=3001

# ============================================================
# JACKETT CONFIGURATION
# ============================================================
# Jackett server URL (indexer aggregator for torrents)
JACKETT_URL=https://trust-tune-trust-tune-jack.62ickh.easypanel.host
JACKETT_API_KEY=ugokmbv2cfeghwcsm27mtnjva5ch7948

# Specific indexer to use (default: "all" for all configured indexers)
JACKETT_INDEXER=all

# ============================================================
# AI CONFIGURATION
# ============================================================
# AI provider: "openai" or "anthropic"
AI_PROVIDER=openai

# OpenAI API key (for AI-powered search ranking)
# Get one at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# Anthropic API key (alternative to OpenAI)
# Get one at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================================
# MUSICBRAINZ (OPTIONAL)
# ============================================================
# MusicBrainz API key for metadata enrichment
# Get one at: https://musicbrainz.org/doc/MusicBrainz_API
# MUSICBRAINZ_API_KEY=...

# ============================================================
# TORRENT SETTINGS
# ============================================================
# Minimum number of seeders required for a torrent
MIN_SEEDERS=1

# Maximum number of torrents to return in search results
MAX_TORRENTS=50

# ============================================================
# FEATURE FLAGS
# ============================================================
# Skip MusicBrainz metadata lookup (faster but less accurate)
SKIP_MUSICBRAINZ=false

# Use full AI ranking (slower, more accurate, requires AI API key)
USE_FULL_AI=false

# Use partial AI ranking (balanced speed/accuracy)
USE_PARTIAL_AI=true

# ============================================================
# DEVELOPMENT
# ============================================================
# Enable debug mode
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
